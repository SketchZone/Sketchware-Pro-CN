<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/tv_guide"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:background="#fff6f6f6"
                        android:gravity="center"
                        android:text="@string/design_manager_image_description_guide_add_image"
                        android:textColor="@color/grey"
                        android:textSize="14.0sp"
                        android:visibility="gone" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@id/font_list"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_marginTop="2.0dip"
                        android:layout_weight="1.0"
                        android:background="#fff5f5f5"
                        android:scrollbars="vertical"
                        android:splitMotionEvents="false" />
                </LinearLayout>
            </ScrollView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center|right"
                android:layout_margin="16.0dip"
                android:backgroundTint="@color/color_btn_ltpink_normal"
                android:src="@drawable/ic_add_white_36dp"
                app:tint="@null"
                android:visibility="gone"
                app:borderWidth="0.0dip"
                android:contentDescription="TODO" />
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <LinearLayout
            android:id="@id/layout_btn_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#ffffffff"
            android:orientation="horizontal"
            android:padding="4.0dip"
            android:visibility="gone">

            <Button
                android:id="@id/btn_cancel"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_weight="1.0"
                android:textColor="#ffffffff"
                android:textSize="@dimen/text_size_button_material"
                android:theme="@style/AppTheme.Button.Blue" />

            <Button
                android:id="@id/btn_delete"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                android:textColor="#ffffffff"
                android:textSize="@dimen/text_size_button_material"
                android:textStyle="bold"
                android:theme="@style/AppTheme.Button.LightBlue" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@id/btn_import"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8.0dip"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:theme="@style/AppTheme.Button.LightBlue"
        android:visibility="gone" />
</RelativeLayout>
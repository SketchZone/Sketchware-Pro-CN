<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="64.0dip"
    android:layout_marginStart="8.0dip"
    android:layout_marginTop="4.0dip"
    android:layout_marginEnd="8.0dip"
    android:background="@drawable/selector_toggle_list_view">

    <ImageView
        android:id="@id/img_icon"
        android:layout_width="28.0dip"
        android:layout_height="28.0dip"
        android:layout_centerVertical="true"
        android:layout_marginStart="12.0dip"
        android:layout_marginEnd="12.0dip"
        android:contentDescription="@null" />

    <TextView
        android:id="@id/tv_target_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56.0dip"
        android:layout_marginTop="16.0dip"
        android:textColor="#ff404040"
        android:textSize="13.0sp" />

    <TextView
        android:id="@id/tv_sep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:layout_toEndOf="@id/tv_target_type"
        android:text=" : "
        android:textColor="#ff404040"
        android:textSize="13.0sp" />

    <TextView
        android:id="@id/tv_target_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16.0dip"
        android:layout_toStartOf="@+id/checkbox"
        android:layout_toEndOf="@id/tv_sep"
        android:textColor="#ff202020"
        android:textSize="14.0sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_target_id"
        android:layout_marginStart="56.0dip"
        android:layout_toStartOf="@+id/checkbox"
        android:layout_marginBottom="16.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@id/events_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <TextView
            android:id="@id/tv_event_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#ff9a9a9a"
            android:textSize="11.0sp" />
    </LinearLayout>

    <CheckBox
        android:id="@id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8.0dip"
        android:clickable="true"
        android:contentDescription="@null"
        android:gravity="center" />
</RelativeLayout>
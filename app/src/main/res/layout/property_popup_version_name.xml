<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16.0dip"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="32.0dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/img_down1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16.0dip"
            android:background="#fff6f6f6"
            android:padding="8.0dip"
            android:src="@drawable/selector_ic_chevron_left_grey_48" />

        <TextView
            android:id="@id/tv_version1"
            android:layout_width="150.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.0dip"
            android:background="@drawable/textview_style"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="18.0dip" />

        <ImageView
            android:id="@id/img_up1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8.0dip"
            android:background="#fff6f6f6"
            android:padding="8.0dip"
            android:src="@drawable/selector_ic_chevron_right_grey_48" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="32.0dip"
        android:layout_marginTop="4.0dip"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/img_down2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="16.0dip"
            android:background="#fff6f6f6"
            android:padding="8.0dip"
            android:src="@drawable/selector_ic_chevron_left_grey_48" />

        <TextView
            android:id="@id/tv_version2"
            android:layout_width="150.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8.0dip"
            android:background="@drawable/textview_style"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="18.0dip" />

        <ImageView
            android:id="@id/img_up2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8.0dip"
            android:background="#fff6f6f6"
            android:padding="8.0dip"
            android:src="@drawable/selector_ic_chevron_right_grey_48" />
    </LinearLayout>
</LinearLayout>
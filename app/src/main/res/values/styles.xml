<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge" />

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
        <item name="colorControlNormal">@color/color_primary</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
    </style>

    <style name="AppTheme.Button.Blue" parent="@style/Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_btn_blue_normal</item>
        <item name="colorControlHighlight">@color/color_btn_blue_highlight</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.CoolGreen" parent="@style/Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">#ff34bc7e</item>
        <item name="colorControlHighlight">@color/scolor_green_normal</item>
    </style>

    <style name="AppTheme.Button.Green" parent="@style/Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/scolor_green_normal</item>
        <item name="colorControlHighlight">@color/color_btn_green_highlight</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.Indigo" parent="@style/Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">#ff3f51b5</item>
        <item name="colorControlHighlight">#ff3949ab</item>
    </style>

    <style name="AppTheme.Button.LightBlue" parent="@style/Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_btn_ltblue_normal</item>
        <item name="colorControlHighlight">@color/color_btn_ltblue_highlight</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.LightPink" parent="@style/Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_btn_ltpink_normal</item>
        <item name="colorControlHighlight">@color/color_btn_ltpink_highlight</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.WhiteBlue" parent="@style/Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/color_primary</item>
        <item name="colorButtonNormal">#ffffffff</item>
        <item name="colorControlHighlight">#ffdddddd</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Check.White" parent="@style/Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/color_chk_white_highlight</item>
        <item name="colorControlNormal">@color/color_chk_white_normal</item>
    </style>

    <style name="DesignTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@color/design_tab_background</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/design_tab_indicator_color</item>
        <item name="tabIndicatorHeight">3.0dip</item>
        <item name="tabMaxWidth">0.0dip</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/design_tab_selected_text_color</item>
        <item name="tabTextAppearance">@style/DesignTabTextAppearance</item>
    </style>

    <style name="DesignTabTextAppearance" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/design_tab_text_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ManageImageTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@color/design_tab_background</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/design_tab_indicator_color</item>
        <item name="tabIndicatorHeight">3.0dip</item>
        <item name="tabMaxWidth">0.0dip</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/design_tab_selected_text_color</item>
        <item name="tabTextAppearance">@style/DesignTabTextAppearance</item>
    </style>

    <style name="ManageViewTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@color/design_tab_background</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/design_tab_indicator_color</item>
        <item name="tabIndicatorHeight">3.0dip</item>
        <item name="tabMaxWidth">0.0dip</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/design_tab_selected_text_color</item>
        <item name="tabTextAppearance">@style/DesignTabTextAppearance</item>
    </style>

    <style name="NumberPickerText" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/scolor_blue_01</item>
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColorHighlight">#ffeeeeee</item>
    </style>

    <style name="SoundProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">5.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/sound_progress_bar_horizontal</item>
        <item name="android:minHeight">3.0dip</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColorPrimary">@color/light_grey</item>
        <item name="android:textSize">12.0sp</item>
        <item name="colorControlActivated">@color/light_grey</item>
        <item name="colorControlNormal">@color/light_grey</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.Translucent" parent="@style/AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.Translucent.FullScreen" parent="@style/AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar" parent="@style/Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Design" parent="@style/Theme.AppCompat" />

    <style name="Theme.Design.BottomSheetDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>
    </style>

    <style name="Theme.Design.Light" parent="@style/Theme.AppCompat.Light" />

    <style name="Theme.Design.Light.NoActionBar" parent="@style/Theme.Design.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Design.NoActionBar" parent="@style/Theme.Design">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.ToolbarMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/design_menu_bg</item>
        <item name="android:textColor">@color/design_menu_text_color</item>
    </style>

    <style name="ToolbarTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tool_bar_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="progress">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="selectableMainItemBackground">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:colorControlHighlight">@color/color_control_normal</item>
    </style>

    <style name="AppTheme.Et" parent="@style/AppTheme">
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorPrimary">#ff212121</item>
        <item name="colorPrimaryDark">#ff000000</item>
    </style>

    <style name="AboutPageTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SplashScreenTheme" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>
</resources>

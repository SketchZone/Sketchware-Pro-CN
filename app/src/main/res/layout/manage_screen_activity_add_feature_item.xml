    android:layout_height="fill_parent"
    android:layout_marginBottom="16.0dip"
    app:flexDirection="row"
    app:alignItems="center">

    <ImageView
        android:id="@id/img_icon"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip" />

    <TextView
